{% extends 'base.html.twig' %}


{% block body %}

    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-8 col-lg-9">
                <div class="content">
                    <div class="page-title">
                        <h1>Stages</h1>
                    </div><!-- /.page-title -->
                    {% for stage in stages %}
                        <div class="posts">
                            <div class="post">
                                <div class="post-image">
                                    <img src="assets/img/tmp/product-11.jpg" alt="A Clockwork Origin">
                                    <a class="read-more" href="#">View</a>
                                </div><!-- /.post-image -->
                                <div class="post-content">
                                    <h2><a href="#">{{ stage.name }}</a></h2>
                                    <p>{{ stage.description }}</p>
                                </div><!-- /.post-content -->
                                <div class="post-meta clearfix">
                                    <div class="post-meta-author">By <a
                                                href="{{ path('provider_show', {'id' : stage.organiser.id}) }}">{{ stage.organiser.name }} </a>
                                    </div><!-- /.post-meta-author -->
                                    <div class="post-meta-date"> A partir du : {{ stage.dateStart|date("d/m/Y") }}</div>
                                    <!-- /.post-meta-date -->
                                    <div class="post-meta-date"> Jusqu'au : {{ stage.dateTo|date("d/m/Y") }}</div>
                                    <!-- /.post-meta-date -->
                                    <div class="post-meta-more">
                                        {% if is_granted('ROLE_PROVIDER') %}
                                        {% if app.user.name == stage.organiser.name %}
                                        <a  href="{{ path('stageEdit', {'id' : stage.id}) }}">Modifier mon stage
                                            <i class="fa fa-chevron-right"></i></a>
                                            <a href="{{ path('stageRemove', {'id' : stage.id}) }}">Supprimer mon stage
                                                <i class="fa fa-chevron-right"></i></a>
                                                {% endif %}
                                                {% endif %}
                                    </div>
                                    <!-- /.post-meta-more -->
                                </div><!-- /.post-meta -->
                            </div><!-- /.post -->
                        </div><!-- /.post -->
                        <hr/>
                    {% endfor %}
                </div><!-- /.posts -->
            </div><!-- /.sidebar -->
        </div><!-- /.col-* -->
    </div><!-- /.row -->

{% endblock %}
