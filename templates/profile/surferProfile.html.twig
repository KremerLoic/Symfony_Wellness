{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    <div class="container-fluid">
        <div class="main">
            <div class="main-inner">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4 col-lg-3">
                            <div class="sidebar">
                                <div class="widget">
                                    <div class="user-photo">
                                        <a href="#">
                                            <img src="{{ asset('img/' ~ app.user.photo) }}" alt="User Photo">
                                            <span class="user-photo-action">Modifier l'avatar</span>
                                        </a>
                                    </div><!-- /.user-photo -->
                                </div><!-- /.widget -->
                            </div><!-- /.sidebar -->
                        </div><!-- /.col-* -->


                        <div class="col-sm-8 col-lg-9">
                            <div class="content">
                                <div class="page-title">
                                    <h1>Edition du profil</h1>
                                </div><!-- /.page-title -->

                                <div class="background-white p20 mb30">
                                    <h3 class="page-title">
                                        Informations personnelles
                                    </h3>



                                    <div class="row">
                                        <div class="form-group col-sm-6">
                                            {{ form_errors(form.firstname) }}
                                            {{ form_label(form.firstname) }}
                                            {{ form_widget(form.firstname) }}
                                            {{ form_help(form.firstname) }}

                                        </div><!-- /.form-group -->

                                        <div class="form-group col-sm-6">
                                            {{ form_errors(form.name) }}
                                            {{ form_label(form.name) }}
                                            {{ form_widget(form.name) }}
                                            {{ form_help(form.name) }}
                                        </div><!-- /.form-group -->

                                        <div class="form-group col-sm-6">
                                            {{ form_errors(form.email) }}
                                            {{ form_label(form.email) }}
                                            {{ form_widget(form.email) }}
                                            {{ form_help(form.email) }}
                                        </div><!-- /.form-group -->

                                        <div class="form-group col-sm-6">
                                            {{ form_errors(form.newsletter) }}
                                            {{ form_label(form.newsletter) }}
                                            {{ form_widget(form.newsletter) }}
                                            {{ form_help(form.newsletter) }}
                                        </div><!-- /.form-group -->



                                    </div><!-- /.row -->
                                </div>


                                <div class="background-white p20 mb30">
                                    <h3 class="page-title">
                                        Adresse
                                    </h3>

                                    <div class="row">
                                        <div class="form-group col-sm-6">
                                            {{ form_errors(form.street) }}
                                            {{ form_label(form.street) }}
                                            {{ form_widget(form.street) }}
                                            {{ form_help(form.street) }}
                                        </div><!-- /.form-group -->

                                        <div class="form-group col-sm-6">
                                            {{ form_errors(form.number) }}
                                            {{ form_label(form.number) }}
                                            {{ form_widget(form.number) }}
                                            {{ form_help(form.number) }}
                                        </div><!-- /.form-group -->

                                        <div class="form-group col-sm-6">
                                            {{ form_errors(form.locality) }}
                                            {{ form_label(form.locality) }}
                                            {{ form_widget(form.locality) }}
                                            {{ form_help(form.locality) }}
                                        </div><!-- /.form-group -->



                                        <div class="form-group col-sm-3">
                                            {{ form_errors(form.zip_code) }}
                                            {{ form_label(form.zip_code) }}
                                            {{ form_widget(form.zip_code) }}
                                            {{ form_help(form.zip_code) }}
                                        </div><!-- /.form-group -->
                                    </div><!-- /.row -->
                                    {{ form_widget(form.save) }}
                                </div>

                            </div>
                        </div>
                    </div>
                </div><!-- /.content -->
            </div><!-- /.container -->
        </div><!-- /.main-inner -->
    </div><!-- /.main -->
    {{ form_end(form) }}

{% endblock %}